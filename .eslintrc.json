{
  "env": { "browser": true, "node": true },
  "settings": {
    "import/parsers": { "@typescript-eslint/parser": [".ts", ".tsx"] },
    "import/resolver": { "typescript": "./tsconfig.json" }
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "project": ["./tsconfig.json", "./next.config.js"]
  },
  "plugins": [
    "@typescript-eslint",
    "react",
    "react-hooks"
  ],
  "ignorePatterns": [
    "*.config.js",
    "*.plugin.js",
    "*.json"
  ]
}
